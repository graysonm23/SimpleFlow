<head>
  <link rel="stylesheet" href="/styles/task.css" media="screen" title="no title" charset="utf-8">
</head>
<div class="wrapper">
  <!-- Sidebar Holder -->
  <nav id="sidebar">
    <div class="sidebar-header">
      <img src="images/logo.png" alt="SimpleFlow logo">
    </div>

    <ul style="text-align: center;" class="list-unstyled components">
      <p>Welcome!</p>
      <li class="active">
        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home</a>
        <ul class="collapse list-unstyled" id="homeSubmenu">
          <li>
            <a href="/profile">Profile</a>
          </li>
          <li>
            <a href="/inbox">Inbox</a>
          </li>
          <li>
            <a href="/notifications">Notifications</a>
          </li>
        </ul>
      </li>
      <li>
        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Account</a>
        <ul class="collapse list-unstyled" id="pageSubmenu">
          <li>
            <a href="/forgot">Reset Password</a>
          </li>
          <li>
            <a href="/login">Login</a>
          </li>
          <li>
            <a href="/signup">Sign Up!</a>
          </li>
        </ul>
      </li>
      <li>
        <a href="/dashboard">Dashboard</a>
      </li>
      {{!-- <li>
                <a href="#">Contact</a>
                <a href="#">About</a>
            </li> --}}

    </ul>

    <ul class="list-unstyled CTAs">
      <li>
        <a href="https://github.com/graysonm23/SimpleFlow" class="github">Open Source Project</a>
      </li>
    </ul>
  </nav>
  <div id="dashBgImage"></div>
  <!-- Page Content Holder -->
  <div id="content">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">

        <button type="button" id="sidebarCollapse" class="navbar-btn">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <h1 class="header">Dashboard</h1>
      </div>
    </nav>
    <div class="container-fluid">
      <h1 class="projectHeader">Tasks</h1>
      {{> task }}
      <div class="row dragbox">
        <div class="col-sm to-do-cont">
          <h2>To Do:</h2>
          <div id="todo" class="row drag-row to-do drag-column"></div>
        </div>
        <div class="col-sm in-progress-cont">
          <h2>In Progress:</h2>
          <div id="inprogress" class="row drag-row in-progress drag-column"></div>
        </div>
        <div class="col-sm task-completed-cont">
          <h2>Completed:</h2>
          <div id="taskcompleted" class="row drag-row task-completed drag-column">
          </div>
        </div>
      </div>
    </div>
    {{!-- <div class="line"></div> --}}



  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    $('#sidebarCollapse').on('click', function () {
      $('#sidebar').toggleClass('active');
      $(this).toggleClass('active');
    });
  });
</script>

<script src="/js/dashboard.js"></script>